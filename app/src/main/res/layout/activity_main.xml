<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Fitur Aplikasi UAS"
        android:textColor="#2196F3"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="InputData"
        android:text="Input Data SQLite"
        android:textColor="#FCFDFD" />

    <Button
        android:id="@+id/btnGoogleMap"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="GoogleMap"
        android:text="Google Map"
        android:textColor="#FCFDFD" />

    <Button
        android:id="@+id/btnSensorGPS"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="Sensor_GPSKompas"
        android:text="Sensor GPS"
        android:textColor="#FCFDFD" />

    <Button
        android:id="@+id/btnKamera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="Camera"
        android:text="Kamera"
        android:textColor="#FCFDFD" />

    <Button
        android:id="@+id/btnSuara"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="SongPlayer"
        android:text="Suara"
        android:textColor="#FCFDFD" />

    <Button
        android:id="@+id/btnWebService"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#677CF0"
        android:onClick="WebService"
        android:text="Web Service"
        android:textColor="#FCFDFD" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="121dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#8EE694"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="Created By :"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="Nama : Dominikus Afendi Nahak"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="NIM : 165410135"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>