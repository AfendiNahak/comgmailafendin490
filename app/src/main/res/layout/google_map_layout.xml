<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B7DFF1"
    tools:context=".GoogleMap.Google_Map">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="176dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/google_map_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Klik Tombol Untuk Memulai Navigasi"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnNavigasi"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#677CF0"
        android:drawableLeft="@android:drawable/ic_menu_directions"
        android:text="Navigasi"
        android:textColor="#000000" />

</LinearLayout>
